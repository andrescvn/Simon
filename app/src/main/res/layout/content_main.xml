<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.acomesanavila.grid.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:columnCount="1"
        android:rowCount="4">


        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:weightSum="1">

            <Button
                android:id="@+id/puntuacion"
                style="@style/AppTheme.Boton.Negro"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.89"
                android:padding="0dp"
                android:text="PuntuaciÃ³n= " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:weightSum="1">

            <Button
                android:id="@+id/start"
                style="@style/AppTheme.Boton.Negro"
                android:layout_width="164dp"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_weight="0.89"
                android:text="Start" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:weightSum="1">

            <Button
                android:id="@+id/comprobar"
                style="@style/AppTheme.Boton.Negro"
                android:layout_width="164dp"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_weight="0.89"
                android:text="Comprobar" />
        </LinearLayout>

        <GridLayout
            android:layout_width="328dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginLeft="25dp"
            android:layout_row="1"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:rowCount="2">


            <Button
                android:id="@+id/rojo"
                style="@style/AppTheme.Boton.Rojo"
                android:layout_width="164dp"
                android:layout_height="wrap_content"

                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_row="0"
                 />

            <Button
                android:id="@+id/azul"
                style="@style/AppTheme.Boton.Azul"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:layout_row="1"
                 />

            <Button
                android:id="@+id/verde"
                style="@style/AppTheme.Boton.Verde"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_row="1"
               />

            <Button
                android:id="@+id/amarillo"
                style="@style/AppTheme.Boton.Amarillo"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:layout_row="0"
                 />
        </GridLayout>

    </GridLayout>
</android.support.constraint.ConstraintLayout>
